# Olympus Cloud GCP - Environment Configuration

# ============================================
# Application Configuration
# ============================================

# Environment (dev, staging, prod)
ENVIRONMENT=development

# API Configuration
API_PORT=8080
API_HOST=0.0.0.0
API_BASE_URL=http://localhost:8080

# Frontend Configuration
FRONTEND_PORT=3000
FRONTEND_HOST=0.0.0.0

# ============================================
# Database Configuration
# ============================================

# PostgreSQL
DATABASE_URL=postgresql://olympus:devpassword@localhost:5432/olympus?sslmode=disable
DB_HOST=localhost
DB_PORT=5432
DB_NAME=olympus
DB_USER=olympus
DB_PASSWORD=devpassword
DB_SSL_MODE=disable
DB_MAX_CONNECTIONS=100
DB_POOL_SIZE=20

# Redis
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# ============================================
# Google Cloud Configuration
# ============================================

# GCP Project
GOOGLE_PROJECT_ID=olympus-cloud
GOOGLE_REGION=us-central1
GOOGLE_ZONE=us-central1-a

# Service Account (for local development)
GOOGLE_APPLICATION_CREDENTIALS=./credentials/gcp-service-account.json

# BigQuery
BIGQUERY_DATASET=olympus_analytics_dev

# ============================================
# Authentication & Security
# ============================================

# JWT Configuration
JWT_SECRET=dev-secret-change-in-production-to-random-64-char-string
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=60
JWT_REFRESH_TOKEN_EXPIRE_DAYS=30

# OAuth Providers (optional)
OAUTH_GOOGLE_CLIENT_ID=
OAUTH_GOOGLE_CLIENT_SECRET=
OAUTH_GITHUB_CLIENT_ID=
OAUTH_GITHUB_CLIENT_SECRET=

# API Keys
API_KEY_HEADER=X-API-Key
INTERNAL_API_KEY=internal-dev-key-change-in-production

# ============================================
# Third-Party Services
# ============================================

# Stripe (Payment Processing)
STRIPE_SECRET_KEY=sk_test_your_stripe_test_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# SendGrid (Email)
SENDGRID_API_KEY=
SENDGRID_FROM_EMAIL=noreply@olympuscloud.io

# Twilio (SMS)
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=

# OpenAI
OPENAI_API_KEY=
OPENAI_ORGANIZATION=

# Anthropic
ANTHROPIC_API_KEY=

# Google AI
GOOGLE_AI_API_KEY=

# ============================================
# Cloudflare
# ============================================

CLOUDFLARE_API_TOKEN=
CLOUDFLARE_ZONE_ID=
CLOUDFLARE_ACCOUNT_ID=

# ============================================
# Monitoring & Logging
# ============================================

# Sentry
SENTRY_DSN=
SENTRY_ENVIRONMENT=development

# Log Level (debug, info, warning, error, critical)
LOG_LEVEL=debug
LOG_FORMAT=json

# Metrics
METRICS_ENABLED=true
METRICS_PORT=9090

# ============================================
# Feature Flags
# ============================================

FEATURE_MULTI_LOCATION=true
FEATURE_LOYALTY_PROGRAM=true
FEATURE_INVENTORY_TRACKING=true
FEATURE_ONLINE_ORDERING=true
FEATURE_TABLE_MANAGEMENT=false
FEATURE_KITCHEN_DISPLAY=false
FEATURE_EMPLOYEE_SCHEDULING=true
FEATURE_ADVANCED_ANALYTICS=false
FEATURE_AI_SUGGESTIONS=true
FEATURE_VOICE_COMMANDS=false

# ============================================
# Development Settings
# ============================================

# Debug Mode
DEBUG=true

# Hot Reload
HOT_RELOAD=true

# CORS
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080
CORS_ALLOW_CREDENTIALS=true
CORS_MAX_AGE=3600

# Rate Limiting
RATE_LIMIT_ENABLED=false
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# ============================================
# Testing Configuration
# ============================================

TEST_DATABASE_URL=postgresql://olympus:testpassword@localhost:5433/olympus_test?sslmode=disable
TEST_REDIS_URL=redis://localhost:6380

# ============================================
# Docker Configuration
# ============================================

COMPOSE_PROJECT_NAME=olympus-cloud
DOCKER_REGISTRY=gcr.io/olympus-cloud
DOCKER_TAG=latest